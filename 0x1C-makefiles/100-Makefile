NAME := school
SRC := main.c school.c

CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	@echo "Cleaning up..."
	rm -f *~ $(NAME)

oclean:
	@echo "Removing object files..."
	rm -f *.o

fclean: clean oclean
	@echo "Fully cleaning the directory..."

re: fclean all
	@echo "Rebuilding the project..."