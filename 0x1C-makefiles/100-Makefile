# Mandatory variables
NAME := school
SRC := main.c school.c

# Compiler and flags
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

# Phony targets to ensure correct behavior under various scenarios
.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	@echo "Cleaning up..."
	rm -f *~ $(NAME)

oclean:
	@echo "Removing object files..."
	rm -f *.o

fclean: clean oclean
	@echo "Fully cleaning the directory..."

re: fclean all
	@echo "Rebuilding the project..."

# The check for m.h is in the prerequisite list for the $(NAME) target to ensure the Makefile fails if m.h is missing
